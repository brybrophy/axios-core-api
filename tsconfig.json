{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "lib": ["esnext", "dom"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "index.js",
    "index.d.ts",
    "index.js.map"
  ]
}
